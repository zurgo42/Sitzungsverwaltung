<?php
/**
 * MinD-Referentenliste - Beispiel-Konfigurationsdatei
 *
 * INSTALLATION:
 * 1. Kopiere diese Datei nach config.php
 * 2. Trage deine Datenbank-Zugangsdaten ein
 * 3. Passe die Einstellungen nach Bedarf an
 */

// ============= DATENBANK-ZUGANGSDATEN =============
// WICHTIG: Hier die Zugangsdaten für die Referenten-Datenbank eintragen!

define('MYSQL_HOST', 'localhost');           // Datenbank-Server
define('MYSQL_USER', 'dein_db_benutzer');   // Datenbank-Benutzer
define('MYSQL_PASS', 'dein_db_passwort');   // Datenbank-Passwort
define('MYSQL_DATABASE', 'deine_datenbank'); // Datenbank-Name

// Alternative Konstantennamen (für Kompatibilität)
define('DB_HOST', MYSQL_HOST);
define('DB_USER', MYSQL_USER);
define('DB_PASS', MYSQL_PASS);
define('DB_NAME', MYSQL_DATABASE);

// ============= ZEITZONE =============
date_default_timezone_set('Europe/Berlin');

// ============= ERROR REPORTING =============
// Auf dem Produktivserver ausschalten (false)
define('DEBUG_MODE', false);

if (DEBUG_MODE) {
    error_reporting(E_ALL);
    ini_set('display_errors', 1);
} else {
    error_reporting(0);
    ini_set('display_errors', 0);
}

// ============= SESSION-SICHERHEIT =============
ini_set('session.cookie_httponly', 1);
ini_set('session.use_only_cookies', 1);
// Nur bei HTTPS aktivieren:
// ini_set('session.cookie_secure', 1);
